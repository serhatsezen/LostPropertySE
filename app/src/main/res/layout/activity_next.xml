<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="@color/white_greyish">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- toolbar -->
                <include layout="@layout/snippet_top_nexttoolbar" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout1"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imageShare"
                    android:background="@null"
                    android:hint="Açıklama Yazın..."
                    android:padding="10dp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout2"
                android:background="@drawable/grey_border_bottom">
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/caption"
                    android:layout_toStartOf="@+id/imageShare"
                    android:background="@null"
                    android:hint="Adres."
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lostOrfind"
                    android:layout_width="match_parent"
                    android:textColor="@color/commentBackGround"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/imageShare"
                    android:background="@null"
                    android:layout_below="@+id/location"
                    android:hint="Kategori Seç."
                    android:padding="10dp"
                    android:textSize="20sp"
                    />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
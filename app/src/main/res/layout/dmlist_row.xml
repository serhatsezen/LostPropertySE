<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="15dp"
    tools:ignore="ResAuto">
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_avatar"
        app:siBorderWidth="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        app:siBorderColor="@color/black"
        android:id="@+id/list_row_imageview_padisah" />


    <TextView
        android:id="@+id/list_row_textview_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_row_imageview_padisah"
        android:layout_alignLeft="@+id/list_row_textview_isim"
        android:layout_alignStart="@+id/list_row_textview_isim"
        android:text="TextView"
        android:visibility="gone"
        android:layout_below="@+id/list_row_textview_isim"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_row_textview_isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toRightOf="@+id/list_row_imageview_padisah"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="13sp" />

</RelativeLayout>

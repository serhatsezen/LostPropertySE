<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/list_row_imageview_profimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:orientation="vertical">

        <com.team3s.lostpropertyse.Utils.MyTextView
            android:id="@+id/list_row_textview_isim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ä°sim"
            android:textColor="#000"
            android:textSize="13sp" />

        <com.team3s.lostpropertyse.Utils.MyTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="mesaj"
            android:visibility="gone"
            android:textColor="#868686"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:gravity="right">

        <com.team3s.lostpropertyse.Utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textSize="10sp" />
        <TextView
            android:id="@+id/list_row_textview_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_row_imageview_padisah"
            android:layout_alignLeft="@+id/list_row_textview_isim"
            android:layout_alignStart="@+id/list_row_textview_isim"
            android:text="TextView"
            android:visibility="gone"
            android:layout_below="@+id/list_row_textview_isim"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>